{
    "assets": {
        "fonts": {
            "src": "fonts",
            "dest": "assets/fonts",
            "files": ["**/*.{woff2,woff,svg,eot,ttf,otf}"]
        },
        "images": {
            "src": "images",
            "dest": "assets/images",
            "files": ["**/*.{png,jpg,jpeg,gif,svg}"]
        },
        "scripts": {
            "src": "js",
            "dest": "assets/scripts",
            "files": ["*.js"]
        },
        "styles": {
            "src": "scss",
            "dest": "assets/styles",
            "files": ["**/[!_]*.{sass,scss}"]
        },
        "html": {
            "src": "html",
            "dest": "",
            "files": ["**/*.html"]
        }
    },
    "autoprefixer": {
        "browsers": ["last 1 version", "last 2 ie versions", "android >= 4.4", "last 2 iOS versions"]
    },
    "src":  "./src",
    "dest": "./build",
    "env": "dev"
}
